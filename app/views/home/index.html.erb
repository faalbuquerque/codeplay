<h3><%= t('.title') %></h3>

<%= form_with url: search_path, method: :get do %>
  <p>
    <%= label_tag :query, t('.search') %>
    <%= text_field_tag :query %>
    <%= submit_tag t('.go') %>
  </p>
<% end %>

<% @courses.each do |course| %>
  <p>
    <%= link_to course.name, course %>
  </p>
  <p>
    <%= course.description %>
  </p>
  <p>
    <%= number_to_currency course.price %>
  </p>
<% end %>