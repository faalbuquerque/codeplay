<%= form_with model: course, local: true do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description, size: "30x1" %>
  </p>

  <p>
    <%= f.label :code %>
    <%= f.text_field :code %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.label :enrollment_deadline %>
    <%= f.date_field :enrollment_deadline %>
  </p>

  <p>
    <%= f.label :teacher_id, t('.teacher') %>
    <%= f.collection_select :teacher_id, teachers, :id, :name %>
  </p>

  <p><%= f.submit %></p>
<% end %>
