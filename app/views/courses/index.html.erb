<p><%= link_to 'Voltar', root_path %></p>

<p><%= link_to 'Registrar um Curso', new_course_path %></p>

<% if @courses.empty? %>
  <%= 'Nenhum curso disponÃ­vel!' %>
<% end %>

<div class="container_list">
  <% @courses.each do |course|%>
    <div class="item">
      <h2>
        <%= link_to course.name, course %>
      </h2>

      <p>
        <%= course.description %>
      </p>

      <p>
        <%= number_to_currency course.price, unit: 'R$', separator: ',', delimiter: '.', format: '%u %n' %>
      </p>

      <p>
        <%= link_to 'Editar curso', edit_course_path(course) %> | 
        <%= link_to 'Apagar curso', course_path(course),
                                    method: :delete,
                                    data: {confirm: "Tem certeza?"} %>
      </p>
    </div>
  <% end %>
</div>
